---
import siteConfig from '#site.config';

import SocialLinks from '#components/SocialLinks.astro';
import NavLink from '#components/NavLink.astro';

const navLinks = [
	{
		text: 'About',
		href: '/about'
	},
	{
		text: 'Contact',
		href: '/contact'
	},
	{
		text: 'Terms',
		href: '/terms'
	}
];
const currentYear = new Date().getFullYear();
---

<footer id="site-footer">
	<nav aria-label="Footer navigation">
		{navLinks.map((link) => <NavLink href={link.href}>{link.text}</NavLink>)}
	</nav>
	<div id="site-footer-data">
		<SocialLinks />
		<p class="text-sm">
			&copy; {currentYear}
			{siteConfig.title}. All rights reserved.
		</p>
	</div>
</footer>

<style is:global>
	@reference '#styles/global.css';

	footer#site-footer {
		@apply mx-auto w-full max-w-3xl pt-12 pb-10 sm:pt-24 sm:pb-14;
	}

	#site-footer nav {
		@apply mb-4 flex flex-wrap gap-x-6 gap-y-1;
		& a {
			@apply text-sm;
		}
	}

	#site-footer-data {
		@apply border-main flex flex-col gap-4 border-t border-dotted pt-6;
		/* With social links only */
		@apply sm:flex-row-reverse sm:items-center sm:justify-between;
	}
</style>
