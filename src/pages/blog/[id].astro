---
import { type CollectionEntry, getCollection, render } from 'astro:content';

import BaseLayout from '#layouts/Layout.astro';
import Button from '#components/Button.astro';
import FormattedDate from '#components/FormattedDate.astro';
import PostPreview from '#components/PostPreview.astro';
import Subscribe from '#components/Subscribe.astro';
import { byDateDesc } from '#utils/data-utils';
import { slugify } from '#utils/common-utils';

export async function getStaticPaths() {
	const posts = (await getCollection('blog')).sort(byDateDesc);
	const postCount = posts.length;
	return posts.map((post, index) => ({
		params: { id: post.id },
		props: {
			post,
			prevPost: index + 1 !== postCount ? posts[index + 1] : null,
			nextPost: index !== 0 ? posts[index - 1] : null
		}
	}));
}

type Props = { post: CollectionEntry<'blog'>; prevPost: CollectionEntry<'blog'>; nextPost: CollectionEntry<'blog'> };

const { href } = Astro.url;
const { post, prevPost, nextPost } = Astro.props;
const { title, publishDate, updatedDate, excerpt, tags = [], seo } = post.data;
const { Content } = await render(post);
---

<BaseLayout title={seo?.title ?? title} description={seo?.description ?? excerpt} image={seo?.image} pageType="article">
	<article>
		<header>
			<h1>{title}</h1>
			<div class="mt-4 text-sm">
				<FormattedDate date={publishDate} />
				{
					updatedDate && (
						<>
							{' '}
							<span>
								(Updated on <FormattedDate date={updatedDate} />)
							</span>
						</>
					)
				}
			</div>
		</header>
		<section class="prose sm:prose-lg max-w-none">
			<Content />
		</section>
		<div id="connections">
			{
				tags.length > 0 && (
					<div id="tags">
						{tags.map((tag) => (
							<a href={`/tags/${slugify(tag)}`}>#{tag}</a>
						))}
					</div>
				)
			}
			<Button class="copy-url-button" aria-label="Copy link" data-url={href} data-tooltip-default="Copy link" data-tooltip-success="Copied">Share</Button>
		</div>
	</article>
	{
		(prevPost || nextPost) && (
			<nav id="article-series">
				<h2>Read Next</h2>
				{nextPost && <PostPreview post={nextPost} headingLevel="h3" />}
				{prevPost && <PostPreview post={prevPost} headingLevel="h3" />}
			</nav>
		)
	}
	<Subscribe />
</BaseLayout>

<script>
	document.addEventListener('astro:page-load', () => {
		const copyUrlButton = document.querySelector('.copy-url-button') as HTMLButtonElement;
		copyUrlButton?.addEventListener('click', async () => {
			await copyUrl(copyUrlButton);
		});

		async function copyUrl(button: HTMLButtonElement) {
			let url = button.getAttribute('data-url') || '';
			let label = button.innerText;

			await navigator.clipboard.writeText(url);

			button.innerText = 'Copied';

			setTimeout(() => {
				button.innerText = label;
			}, 2500);
		}
	});
</script>

<style is:global>
	@import '#styles/article.css';

	#connections {
		@apply mt-8 flex flex-wrap items-center justify-between gap-6 text-sm sm:mt-12 sm:text-base;

		& > #tags {
			@apply flex flex-wrap gap-x-5 gap-y-1 text-sm;

			& > a {
				@apply text-main hover:underline;
			}
		}
	}
</style>
